<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextureView
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <Button android:id="@+id/reset_button"
            android:visibility="gone"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_button_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>

    <fi.iki.ashar.iscute.RectangleView android:id="@+id/rectangle"
                                       android:layout_width="319dp"
                                       android:layout_height="319dp"
                                       app:layout_constraintLeft_toLeftOf="parent"
                                       app:layout_constraintRight_toRightOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView android:id="@+id/captured_image"
               tools:ignore="contentDescription"
               android:visibility="gone"
               android:layout_width="299dp"
               android:layout_height="299dp"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>

    <Button android:id="@+id/evaluate_button"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evaluate_button_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"/>

    <TextView android:id="@+id/cuteness_percentage_text"
              android:visibility="gone"
              android:background="@color/textBackground"
              android:textColor="@color/textForeground"
              android:textAlignment="center"
              android:textSize="18pt"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintBottom_toTopOf="@id/cuteness_evaluation_text"/>

    <TextView android:id="@+id/cuteness_evaluation_text"
              android:visibility="gone"
              android:background="@color/textBackground"
              android:textColor="@color/textForeground"
              android:textAlignment="center"
              android:textSize="18pt"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginBottom="20dp"/>

</android.support.constraint.ConstraintLayout>